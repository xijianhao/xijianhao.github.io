---
interface Props {
  image: ImageMetadata;
}

const { image } = Astro.props;
---

<img class="avatar-image" src={image.src} alt="" />

<style>
  .avatar-image {
    width: 120px;
    border-radius: 50%;
    margin: 0 auto;
    border: 4px solid #ffffff;
    cursor: pointer;
    box-sizing: border-box;
    transition: all 0.3s;
  }
  .avatar-image:hover {
    border: 0px solid #ffffff;
    box-shadow: 0px 3px 10px #9c9c9c;
  }
</style>
